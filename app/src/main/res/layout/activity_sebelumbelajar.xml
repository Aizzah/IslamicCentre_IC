        android:textSize="12sp"
        android:layout_below="@+id/textView81"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="يَارَبِّ زِدْنِىْ عِلْمًا وَارْزُقْنِىْ فَهْمًا "
