        android:id="@+id/textView11"
        android:textSize="12sp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Artinya :
Dengan nama-Mu ya Allah aku hidup dan aku mati."
