<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adaangin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.xiirpl505152535.islamiccentre_ic.doa.adaangin">

    <TextView
        android:text="اَللهُمَّ اِنِّىْ اَسْأَلُكَ خَيْرَهَا وَخَيْرَمَا فِيْهَا وَخَيْرَمَآ اَرْسَلْتَ بِهِ، وَاَعُوْذُبِكَ مِنْ شَرِّهَا وَشَرِّمَآ اَرْسَلْتَ بِهِ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView77"
        android:textSize="35sp"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ALLOOHUMMA INNI AS-ALUKA KHOIROHAA WA KHOIRO MAA FIIHAA WA KHOIRO MAA ARSALTA BIHI WA A'UUDZU BIKA MIN SYARRIHAA WA SYARIIMAA ARSALTA BIHI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView79"
        android:textSize="12sp"
        android:layout_below="@+id/textView77"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="DOA KETIKA ADA ANGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView78"
        android:textSize="20sp"
        android:textColor="?android:attr/colorForeground"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Artinya :
Ya Allah! aku mohon kepadaMu kebaikannya (angin) dan kebaikannya apa yang ada padanya, dan kebaikan yang dibawanya, dan aku berlindung kepadaMu dari kejahatannya dan kejahatan yang ada padanya dan kejahatan yang dibawanya."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView80"
        android:layout_marginTop="42dp"
        android:textSize="15sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView79"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
